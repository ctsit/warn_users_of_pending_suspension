{
    "name": "Warn Users of Pending Suspension",
    "namespace": "UF_CTSI\\WarnUsersOfPendingSuspension",
    "description": "A REDCap external module that will warn users of pending suspensions and provide an easy opportunity to extend the life of REDCap accounts.",

    "permissions": [
        "redcap_every_page_top"
    ],
    "enable-every-page-hooks-on-system-pages": true,
    "authors": [
        {
            "name": "University of Florida CTS-IT",
            "email": "CTSIT-REDCAP-MODULE-SUPPO@LISTS.UFL.EDU",
            "institution": "University of Florida - CTSI"
        }
    ],
    "system-settings" : [
        {
            "key": "wups_update_user_lastlogin",
            "name": "Update user_lastlogin on main REDCap pages",
            "required": false,
            "type": "checkbox",
            "repeatable": false
        },
        {
            "key": "use_wups_sender",
            "name": "Use Custom Email Sender",
            "required": false,
            "type": "checkbox",
            "repeatable": false
        },
        {
            "key": "wups_sender",
            "name": "Email Sender",
            "required": false,
            "type": "text",
            "repeatable": false,
            "branchingLogic": {
                "field": "use_wups_sender",
                "op": "=",
                "value": true
            }
        },
        {
            "key": "wups_subject",
            "name": "Email Subject",
            "required": false,
            "type": "text",
            "repeatable": false
        },
        {
            "key": "wups_body",
            "name": "Email Body",
            "required": false,
            "type": "rich-text",
            "repeatable": false
        },
        {
            "key": "wups_notifications",
            "name": "Days Before Suspension",
            "description": "These are the days before suspension when notifications will be sent.",
            "required": false,
            "type": "textarea",
            "repeatable": false
        }
    ],
    "crons": [
        {
            "cron_name": "warn_users_account_suspension_cron",
            "cron_description": "Cron that runs daily to warn users of future account suspensions.",
            "method": "warn_users_account_suspension_cron",
            "cron_frequency": "86400",
            "cron_max_run_time": "1200"
        }
    ]
}
